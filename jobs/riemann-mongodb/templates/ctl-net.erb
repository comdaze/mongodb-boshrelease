#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

RUN_DIR=/var/vcap/sys/run/riemann-mongodb
LOG_DIR=/var/vcap/sys/log/riemann-mongodb
JOB_DIR=/var/vcap/jobs/riemann-mongodb
PIDFILE=${RUN_DIR}/net_pid

case $1 in

  start)
    mkdir -p $RUN_DIR $LOG_DIR
    chown -R vcap:vcap $RUN_DIR $LOG_DIR


    cd /var/vcap/packages/riemann-mongodb/riemann-mongodb

    export PATH=/var/vcap/packages/ruby/bin:$PATH



    bundle exec riemann-net --host <%= properties.riemann.server %> --event-host <%= spec.index %>.<%= spec.job.name %>.<%= properties.riemann.suffix %> \
        >>  $LOG_DIR/riemann-net.stdout.log \
        >> $LOG_DIR/riemann-net.stderr.log &
    echo $! > $PIDFILE
    ;;

  stop)

    kill -9 `cat $PIDFILE`
    rm -f $PIDFILE

    ;;

  *)
    echo "Usage: ctl-net {start|stop}" ;;

esac
