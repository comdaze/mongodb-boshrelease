systemLog:
   destination: file
   path: "/var/vcap/sys/log/mongodb/mongodb.log"
   quiet: true
   logAppend: true

storage:
  dbPath: "/var/vcap/store/mongodb"
  directoryPerDB: true
  journal:
    enabled: true

net:
  bindIp: <%= p("net.bindIp") %>
  port: <%= p("net.port") %>

<% if_p("replication.replSetName") do %>
replication:
  replSetName: <%= p("replication.replSetName") %>
<% end %>
