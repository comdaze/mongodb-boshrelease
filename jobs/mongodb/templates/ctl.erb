#!/bin/bash

RUN_DIR=/var/vcap/sys/run/mongodb
LOG_DIR=/var/vcap/sys/log/mongodb
JOB_DIR=/var/vcap/jobs/mongodb
BIN_DIR=/var/vcap/packages/mongodb
DAT_DIR=/var/vcap/store/mongodb
PID_FILE=${RUN_DIR}/pid

case $1 in

  start)
    mkdir -p $RUN_DIR $LOG_DIR
    mkdir -p $DATA_DIR
    chown -R vcap:vcap $RUN_DIR $LOG_DIR

    cd ${BIN_DIR}

    exec ${BIN_DIR}/mongod \
      --fork \
      --pidfilepath ${PID_FILE} \
      --config ${JOB_DIR}/config/mongodb.conf \
      >>  $LOG_DIR/mongodb.stdout.log \
      2>> $LOG_DIR/mongodb.stderr.log
    ;;

  stop)
    kill -9 `cat $PID_FILE`
    rm -f $PID_FILE
    ;;

  *)
    echo "Usage: ctl {start|stop}" ;;

esac
